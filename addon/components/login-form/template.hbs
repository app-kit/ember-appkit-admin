
<div class="login-box">
  <div class="login-logo">
    <a href="#"><b>Admin</b>LTE</a>
  </div><!-- /.login-logo -->

  {{yield}}


  <div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>

    <form>
			{{#if error}}
			<div class="alert alert-danger">
				{{error}}
			</div>
			{{/if}}

      <div class="form-group has-feedback">
      {{input value=user class="form-control" placeholder="Email/Username"}}
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
      	{{input type="password" value=password class="form-control" placeholder="Password"}}
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
        </div><!-- /.col -->
        <div class="col-xs-4">
        	{{#if loading}}
					<div style="position:relative;">
						{{ember-spinner}}
					</div>
					{{else}}
          	<button {{action "login"}} class="btn btn-primary btn-block btn-flat">Sign In</button>
        	{{/if}}
        </div><!-- /.col -->
      </div>
    </form>

  </div><!-- /.login-box-body -->
</div><!-- /.login-box -->

