<div class="app-form">
	
	<div class="box box-primary">
		<div class="box-header with-border">
			{{#if title}}
			<div class="box-title">
				{{title}}
			</div>
			{{/if}}

			<div class="box-body">
				{{#if errors}}
				<div class="alert alert-danger">
					<ul>
						{{#each errors as |error|}}
						<li>
							{{error.message}}
							{{#if error.code}} ({{error.code}}){{/if}}
						</li>
						{{/each}}
					</ul>
				</div>
				{{/if}}
				
				{{em-checkbox property="active" label="Active"}}
				{{em-input property="username" label="Username" placeholder="Username"}}
				{{em-input property="email" label="Email" placeholder="Email"}}
				{{em-checkbox property="emailConfirmed" label="Email is confirmed"}}
				{{app-form-field-relationship model=model field="roles" label="Roles"}}

				{{#if model.isNew}}
				<div class="form-group">
					<label for="password">Password</label>	
					{{input type="password" class="form-control" value=password}}
				</div>
				{{else}}
				<div class="form-inline">
					<div class="form-group">
						<label for="password">Password</label>	
						{{input type="password" class="form-control" value=password}}
					</div>
					<button class="btn btn-info btn-sm" {{action "changePassword"}}>Change</button>
				</div>
				{{/if}}
					
			</div>
		</div> <!-- ./.box-body -->

		<div class="box-footer">
			{{#if loading}}
			<div class="" style="position: relative;">
				{{ember-spinner}}
			</div>
			{{else}}
			<button class="btn btn-default" {{action "formCancelled" }}>Cancel</button>
			<button class="btn btn-info" {{action "submit"}}>Save</button>
			{{/if}}
		</div>
	</div>  <!-- ./.box -->

</div> <!-- ./.app-form -->
