<div class="app-form">
	
	<div class="box box-primary">

		<div class="box-header with-border">
			{{#if title}}
			<div class="box-title">
				{{title}}
			</div>
			{{/if}}
		</div>

		<div class="box-body">
				{{#if errors}}
				<div class="alert alert-danger">
					<ul>
						{{#each errors as |error|}}
						<li>
							{{error.message}}
							{{#if error.code}} ({{error.code}}){{/if}}
						</li>
						{{/each}}
					</ul>
				</div>
				{{/if}}

				{{em-input property="name" label="Name" placeholder="Name"}}
				{{em-select
            label="Language"
            property="language"
            content=languageOptions
            optionValuePath="id"
            optionLabelPath="name"
            prompt="--select--"}}
				{{em-input property="title" label="Title" placeholder="Title"}}
				{{em-text property="description" label="Description" rows=3}}

		</div> <!-- ./.box-body -->

		<div class="box-footer">
			<button class="btn btn-default" {{action "formCancelled" }}>Cancel</button>
			<button class="btn btn-info" {{action "submit"}}>Save</button>
			<button class="btn primary pull-right" disabled={{istnValid}} {{action "saveAndEdit"}}>Save and edit items</button>
		</div>
	</div>  <!-- ./.box -->

	{{#unless model.isNew}}
	{{app-list-nested title="Items" modelName="menu-item" modelTitleField="name"  parentModel=model parentField="items" modelParentField="menu" createFormComponent="menu-item-form" updateFormComponent="menu-item-form" columns=menuItemColumns canOrder=true}}
	{{/unless}}

</div> <!-- ./.app-form -->
